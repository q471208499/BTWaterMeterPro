<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bg_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_login"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/logo_main"
                app:layout_constraintBottom_toBottomOf="@id/bg_login"
                app:layout_constraintLeft_toLeftOf="@id/bg_login"
                app:layout_constraintRight_toRightOf="@id/bg_login"
                app:layout_constraintTop_toTopOf="@id/bg_login" />

            <EditText
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:hint="@string/hint_login_name"
                android:inputType="textVisiblePassword"
                android:maxLines="1"
                android:paddingLeft="30dp"
                android:selectAllOnFocus="true"
                app:layout_constraintTop_toBottomOf="@id/bg_login" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:src="@mipmap/ic_login_name"
                app:layout_constraintBottom_toBottomOf="@id/login_name"
                app:layout_constraintLeft_toLeftOf="@id/login_name"
                app:layout_constraintTop_toTopOf="@id/login_name" />

            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:hint="@string/hint_login_pwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="30dp"
                android:selectAllOnFocus="true"
                app:layout_constraintTop_toBottomOf="@id/login_name" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:src="@mipmap/ic_login_pwd"
                app:layout_constraintBottom_toBottomOf="@id/login_pwd"
                app:layout_constraintLeft_toLeftOf="@id/login_pwd"
                app:layout_constraintTop_toTopOf="@id/login_pwd" />

            <TextView
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/selector_fillet_btn"
                android:gravity="center"
                android:text="@string/nav_header_title"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/login_pwd" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/logo_company"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>